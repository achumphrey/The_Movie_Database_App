<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_show_nav_graph"
    app:startDestination="@id/viewPager_Fragment">

    <fragment
        android:id="@+id/viewPager_Fragment"
        android:name="com.example.themoviedatabaseapp.pager.ViewPagerFragment"
        android:label="fragment_pager_view"
        tools:layout="@layout/fragment_pager_view">
        <action
            android:id="@+id/action_viewPagerFragment_to_TVCurrentlyAiring"
            app:destination="@id/TVCurrentlyAiring" />
        <action
            android:id="@+id/action_viewPagerFragment_to_TVAiringToday"
            app:destination="@id/TVAiringToday" />

        <action
            android:id="@+id/action_TVAiringToday_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_TVAiringToday_to_todFavFragment"
            app:destination="@id/todFavFragment" />

        <action
            android:id="@+id/action_TVCurrentlyAiring_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_TVCurrentlyAiring_to_curFavFragment"
            app:destination="@id/curFavFragment" />

    </fragment>
    <fragment
        android:id="@+id/TVAiringToday"
        android:name="com.example.themoviedatabaseapp.fragments.TVAiringToday"
        android:label="fragment_t_v__airing__today"
        tools:layout="@layout/fragment_t_v__airing__today">
        <action
            android:id="@+id/action_TVAiringToday_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_TVAiringToday_to_todFavFragment"
            app:destination="@id/todFavFragment" />

    </fragment>
    <fragment
        android:id="@+id/TVCurrentlyAiring"
        android:name="com.example.themoviedatabaseapp.fragments.TVCurrentlyAiring"
        android:label="fragment_t_v__currently__airing"
        tools:layout="@layout/fragment_t_v__currently__airing">
        <action
            android:id="@+id/action_TVCurrentlyAiring_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_TVCurrentlyAiring_to_curFavFragment"
            app:destination="@id/curFavFragment" />

    </fragment>
    <fragment
        android:id="@+id/TVDetails"
        android:name="com.example.themoviedatabaseapp.fragments.TVDetails"
        android:label="fragment_t_v_details"
        tools:layout="@layout/fragment_t_v_details">

        <action
            android:id="@+id/action_TVCurrentlyAiring_to_TVDetails"
            app:destination="@id/TVDetails">
        </action>
        <action
            android:id="@+id/action_TVAiringToday_to_TVDetails"
            app:destination="@id/TVDetails">
        </action>

        <argument
            android:name="itemID"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/curFavFragment"
        android:name="com.example.themoviedatabaseapp.fragments.favourites.CurFavFragment"
        android:label="fragment_cur_fav"
        tools:layout="@layout/fragment_cur_fav">
        <action
            android:id="@+id/action_curFavFragment_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>

        <action
            android:id="@+id/action_TVCurrentlyAiring_to_curFavFragment"
            app:destination="@id/curFavFragment" />

    </fragment>
    <fragment
        android:id="@+id/todFavFragment"
        android:name="com.example.themoviedatabaseapp.fragments.favourites.TodFavFragment"
        android:label="fragment_tod_fav"
        tools:layout="@layout/fragment_tod_fav">
        <action
            android:id="@+id/action_todFavFragment_to_TVDetails"
            app:destination="@id/TVDetails">
            <argument
                android:name="itemID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_TVAiringToday_to_todFavFragment"
            app:destination="@id/todFavFragment" />
    </fragment>

</navigation>