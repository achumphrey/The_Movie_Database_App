<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDatabaseApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMovieTheme" parent="Theme.TheMovieDatabaseApp">
        <item name="colorPrimary">@color/leafy_green</item>
        <item name="colorPrimaryVariant">@color/leafy_green_dark</item>
        <item name="pageBackground">@style/parent_view_style</item>
        <item name="buttonCustomStyle">@style/buttonAction</item>
        <item name="buttonBackground">@style/button_style</item>

    </style>
</resources>