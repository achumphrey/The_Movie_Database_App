<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--We can add data tag and the child variables here. But we don't advise
    binding the ui data at this stage from here to avoid complications-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/curFavShowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/curFavshowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="0dp"
                android:text="@string/tv_name"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/curFavShowImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/curFavDateFirstAired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:text="@string/date_first_aired"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/curFavShowImage"
                app:layout_constraintTop_toBottomOf="@+id/curFavshowName" />

            <TextView
                android:id="@+id/curFavShowRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:text="@string/tv_rating"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/curFavShowImage"
                app:layout_constraintTop_toBottomOf="@+id/curFavDateFirstAired" />

            <ImageView
                android:id="@+id/curFavImageBtn"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/favourite_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/curFavShowRating"
                app:layout_constraintTop_toBottomOf="@id/curFavDateFirstAired"
                app:srcCompat="@drawable/heartgrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>