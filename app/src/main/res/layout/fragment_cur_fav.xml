<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.favourites.CurFavFragment">

    <TextView
        android:id="@+id/fragFavCurTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0323F3"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="@string/fav_cur_shows" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyViewFavCurAiring"
        android:layout_marginTop="40dp" />

    <ProgressBar
        android:id="@+id/tvFavCurProgressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvFavCurErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="#1707ED"
        android:visibility="invisible"
        android:layout_gravity="center"
        tools:text="Error Message" />

</FrameLayout>